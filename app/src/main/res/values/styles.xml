<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorAccent">@color/accent</item>

        <item name="android:windowBackground">@color/window_background</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@null</item>

        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="android:windowTranslucentStatus" tools:targetApi="21">true</item>

        <!-- Toolbar Theme / Apply white arrow -->
        <item name="colorControlNormal">@android:color/white</item>
        <item name="actionBarTheme">@style/AppTheme.ActionBarTheme</item>

        <item name="android:windowDrawsSystemBarBackgrounds" tools:targetApi="21">true</item>

    </style>

    <style name="LightWidgetTheme" parent="AppTheme">
        <item name="colorAccent">@color/accent_light</item>
    </style>

    <style name="NavigationDrawer">
        <item name="itemTextColor">@android:color/black</item> 
        <item name="itemIconTint">@color/icon_navigation_drawer</item> 
    </style>

    <style name="AppTheme.ActionBarTheme" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <!-- White arrow -->
        <item name="colorControlNormal">@android:color/white</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@color/drawerArrowColor</item>
    </style>

    <style name="AppTheme.NoTitle" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Toolbar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid">
        <item name="android:background" tools:targetApi="11">@color/primary</item>
        <item name="background">@color/primary</item>

        <item name="android:backgroundStacked" tools:targetApi="14">@color/primary</item>
        <item name="backgroundStacked">@color/primary</item>

        <item name="titleTextColor">@color/white</item>

        <item name="android:titleTextStyle" tools:targetApi="11">@style/ToolbarTitleText</item>
        <item name="titleTextStyle">@style/ToolbarTitleText</item>
    </style>

    <style name="ToolbarTitleText" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/white</item>
        <item name="android:typeface">sans</item>
    </style>

    <style name="LayoutBaseHorizontal">
        <item name="android:paddingLeft">@dimen/padding_left</item>
        <item name="android:paddingRight">@dimen/padding_right</item>
    </style>

    <style name="LayoutBaseVertical">
        <item name="android:paddingTop">@dimen/padding_top</item>
        <item name="android:paddingBottom">@dimen/padding_bottom</item>
    </style>

    <style name="LayoutBase">
        <item name="android:paddingLeft">@dimen/padding_left</item>
        <item name="android:paddingTop">@dimen/padding_top</item>
        <item name="android:paddingBottom">@dimen/padding_bottom</item>
        <item name="android:paddingRight">@dimen/padding_right</item>
    </style>

    <style name="Title">
        <item name="android:textSize">@dimen/text_xlarge</item>
        <item name="android:textColor">@color/black</item>
        <item name="font">@string/font_medium</item>
    </style>

    <style name="Description">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/college_description</item>
        <item name="font">@string/font_regular</item>
    </style>

    <style name="Card" parent="android:Widget">
        <item name="android:background">@color/card_background</item>
    </style>

    <style name="CardContent" parent="android:Widget">
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">24dp</item>
        <item name="android:paddingBottom">24dp</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="Separator">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">@color/separator</item>
    </style>

    <style name="ListItemTitle">
        <item name="android:textSize">@dimen/text_medium</item>
        <item name="android:textColor">@color/list_item_title</item>
    </style>

    <style name="ListItemSubtitle">
        <item name="android:textSize">@dimen/text_medium</item>
        <item name="android:textColor">@color/list_item_subtitle</item>
    </style>

    <style name="DayText">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginLeft">6dp</item>
        <item name="android:layout_marginRight">6dp</item>
        <item name="android:background">@drawable/selector_day_background</item>
        <item name="android:textColor">@drawable/selector_day_text</item>
        <item name="android:gravity">center</item>
    </style>

</resources>
